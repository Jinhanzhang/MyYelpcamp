<% layout('layouts/boilerplate')%>
<div class="row mt-2 pt-5">
    <h1 class="text-center mt-5 text-white-50">Login</h1>
    <div class="col-md-4 offset-md-4">
        <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label text-white-50" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" autofocus required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label text-white-50" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success btn-block">Login</button>
        </form>
    </div>
</div>